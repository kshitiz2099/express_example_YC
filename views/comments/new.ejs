<%- include ('../partials/header') %> 


    <div class="container">
            <h1>Erstellen einen neuen Kommentar zum <%= campground.name %> </h1>
            <div class="mr-auto ml-auto mt-4" style="width: 30%;" >
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>                
    </div>

<%- include ('../partials/footer') %> 