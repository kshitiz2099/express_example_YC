<%- include("../partials/header") %> 

<div class="container">

    <header class="jumbotron">
        <h1>Willkommen in YelpCamp!</h1>
        <p>Sehen Sie unsere handverlesen Campingplätze an</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg">Neuen Campingplatz hinzufügen</a>
        </p>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Unser größte beliebte Standorte</h3>
        </div>
    </div>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= campground.image %> " class="card-img-top" alt="" >
                    <div class="card-body">
                        <h4><%= campground.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    
    

</div>


<%- include("../partials/footer") %> 